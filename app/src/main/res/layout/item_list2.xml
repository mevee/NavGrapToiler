<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp4"
    android:layout_marginTop="@dimen/dp8"
    android:layout_marginEnd="@dimen/dp4"
    android:layout_marginBottom="@dimen/dp4">

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_item_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/bhk3_image" />

        <LinearLayout
            android:id="@+id/ll_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_item_image"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginEnd="@dimen/dp8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:maxLines="1"
                    android:text="2BHK"
                    android:textColor="@color/black_material"
                    android:textSize="@dimen/h3"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:maxLines="1"
                    android:padding="@dimen/dp2"
                    android:text="\u20B98000"
                    android:textColor="@color/black_material"
                    android:textSize="@dimen/h3"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginEnd="@dimen/dp8"
                android:fontFamily="@font/montserrat_medium"
                android:lineSpacingExtra="2.5dp"
                android:maxLines="2"
                android:padding="@dimen/dp2"
                android:text="Mahadev Residency Pg For Boys"
                android:textColor="@color/black_material"
                android:textSize="@dimen/h4"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginEnd="@dimen/dp8"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location_24dp"
                    android:tint="@color/cp_grey" />

                <TextView
                    android:id="@+id/tv_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:lineSpacingExtra="2.5dp"
                    android:maxLines="2"
                    android:text="Saket Institutional Area, Saket, New Delhi, Delhi 110017."
                    android:textColor="@color/black_material"
                    android:textSize="@dimen/h4" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_furnished"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginEnd="@dimen/dp8"
                android:fontFamily="@font/montserrat_medium"
                android:lineSpacingExtra="2.5dp"
                android:maxLines="2"
                android:padding="@dimen/dp2"
                android:text="Semi furnished"
                android:textColor="@color/black_material"
                android:textSize="@dimen/h4"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginEnd="@dimen/dp8"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp4"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:lineSpacingExtra="2.5dp"
                    android:maxLines="1"
                    android:padding="@dimen/dp2"
                    android:text="Listed By : "
                    android:textColor="@color/black_material"
                    android:textSize="@dimen/h4" />

                <TextView
                    android:id="@+id/tv_listedBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:lineSpacingExtra="2.5dp"
                    android:maxLines="1"
                    android:padding="@dimen/dp2"

                    android:text="Owner"
                    android:textColor="@color/black_material"
                    android:textSize="@dimen/h4"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_center"
            android:layout_alignParentRight="true"
            android:background="@color/bg_grey"
            android:orientation="horizontal"
            android:paddingTop=".1dp">

            <LinearLayout
                android:id="@+id/ll_call"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd=".1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_call"
                    android:layout_width="@dimen/dp32"
                    android:layout_height="@dimen/dp32"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/call_black_24dp"
                    android:tint="@color/green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Call"
                    android:textSize="@dimen/h4" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_direction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_directions"
                    android:layout_width="@dimen/dp32"
                    android:layout_height="@dimen/dp32"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_location_24dp"
                    android:tint="@color/green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Directions"
                    android:textSize="@dimen/h4" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart=".1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_message"
                    android:layout_width="@dimen/dp32"
                    android:layout_height="@dimen/dp32"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_textsms_black_24dp"
                    android:tint="@color/green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Message"
                    android:textSize="@dimen/h4" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart=".1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="@dimen/dp32"
                    android:layout_height="@dimen/dp32"
                    android:src="@drawable/share_option"
                    android:tint="@color/green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Share"
                    android:textSize="@dimen/h4" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_Add_to_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart=".1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_bookmark"
            android:layout_width="@dimen/dp32"
            android:layout_height="@dimen/dp32"
            android:src="@drawable/ic_bookmark_black_24dp"
            android:tint="@color/cp_grey" />

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>