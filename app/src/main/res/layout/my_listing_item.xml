<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin6dp"
    android:background="@color/white"
    android:id="@+id/rl_bg">

    <ImageView
        android:id="@+id/iv_item_image"
        android:layout_below="@+id/iv_edit"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerVertical="true"
        android:src="@drawable/bhk3_image" />

    <LinearLayout
        android:id="@+id/ll_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/dp8"
        android:layout_below="@+id/iv_edit"
        android:layout_toEndOf="@+id/iv_item_image"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp2"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/montserrat_medium"
            android:lineSpacingExtra="2.5dp"
            android:maxLines="2"
            android:text="My PG for boys and girls"
            android:textSize="@dimen/h4"
            android:textColor="@color/textColorBrown"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:lineSpacingExtra="2.5dp"
            android:maxLines="1"
            android:text="16 aug 2019"
            android:textSize="@dimen/h4" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2.5dp"
            android:maxLines="1"
            android:text="\u20B98000"
            android:textSize="@dimen/h4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:visibility="visible"
                android:src="@drawable/ic_location_24dp"
                android:tint="@color/black" />

            <TextView
                android:id="@+id/tv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:lineSpacingExtra="2.5dp"
                android:maxLines="2"
                android:text="Saket Institutional Area, Saket, New Delhi, Delhi 110017,Saket Institutional Area, Saket, New Delhi, Delhi 110017"
                android:textSize="@dimen/h4" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/ll_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dp8"
        android:padding="@dimen/dp2"
        android:background="?selectableItemBackground"
        android:layout_alignParentRight="true"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dp2"
            app:cardCornerRadius="@dimen/dp2"
            android:layout_marginEnd="@dimen/dp16"
            >
            <TextView
                android:id="@+id/tb_btn_enable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:padding="4dp"
                android:lineSpacingExtra="2.5dp"
                android:maxLines="1"
                android:textColor="@color/white"
                android:text="Enabled"
                android:textStyle="bold"
                android:textSize="@dimen/h10"
                android:background="@color/tvbtnEnableColor"/>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width=".4dp"
            android:layout_height="match_parent"
            android:background="@color/cp_grey"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dp2"
            app:cardCornerRadius="@dimen/dp2"
            >
            <TextView
                android:id="@+id/tb_btn_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:padding="4dp"
                android:lineSpacingExtra="2.5dp"
                android:maxLines="1"
                android:textColor="@color/textTitlecolor"
                android:text="Remove"
                android:textStyle="bold"
                android:textSize="@dimen/h4" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="?selectableItemBackground"
        android:layout_margin="@dimen/dp4"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_edit_24dp"
        android:tint="@color/black" />
</RelativeLayout>