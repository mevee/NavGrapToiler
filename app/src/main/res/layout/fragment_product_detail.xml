<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.ProductDetailFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_size"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp48"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/dp4"
            android:rotation="180"
            android:src="@drawable/ic_navigate_24dp"
            android:tint="@color/white" />

        <LinearLayout
            android:id="@+id/ll_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp48"
            android:gravity="left|center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/white"
                android:textSize="@dimen/h1" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_bookmark"
            android:layout_width="@dimen/dp48"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/dp4"
            android:src="@drawable/ic_bookmark_black_24dp"
            android:tint="@color/white" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/header_size">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:paddingBottom="@dimen/dp16">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vp_images"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true" />

                <!--<me.relex.circleindicator.CircleIndicator-->
                    <!--android:id="@+id/current_image_indicator"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="4dp"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_marginBottom="@dimen/dp16"-->
                    <!--android:focusable="false"-->
                    <!--app:ci_drawable="@drawable/circle_indicator"-->
                    <!--app:ci_drawable_unselected="@color/white"-->
                    <!--app:ci_height="4dp"-->
                    <!--app:ci_width="4dp" />-->

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height=".2dp"
                android:background="@color/bg_gray" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:lineSpacingExtra="2.5dp"
                android:padding="@dimen/dp2"
                android:text="Mahadev Residency Pg For Boys"
                android:textColor="@color/black_material"
                android:textSize="@dimen/h4"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="@dimen/dp8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="2.5dp"
                        android:maxLines="2"
                        android:layout_margin="@dimen/dp8"
                        android:padding="@dimen/dp2"
                        android:text="\u20B98000"
                        android:textColor="@color/black_material"
                        android:textSize="@dimen/h3"
                        android:textStyle="normal" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".2dp"
                        android:background="@color/bg_gray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:lineSpacingExtra="2.5dp"
                        android:layout_margin="@dimen/dp8"
                        android:maxLines="2"
                        android:padding="@dimen/dp2"
                        android:text="Listed By : Dealer"
                        android:textColor="@color/black_material"
                        android:textSize="@dimen/h4"
                        android:textStyle="normal" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".2dp"
                        android:background="@color/bg_gray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:lineSpacingExtra="2.5dp"
                        android:layout_margin="@dimen/dp8"
                        android:maxLines="2"
                        android:padding="@dimen/dp2"
                        android:text="Independent"
                        android:textColor="@color/black_material"
                        android:textSize="@dimen/h4"
                        android:textStyle="normal" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".2dp"
                        android:background="@color/bg_gray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:lineSpacingExtra="2.5dp"
                        android:layout_margin="@dimen/dp8"
                        android:maxLines="2"
                        android:padding="@dimen/dp2"
                        android:text="First Floor"
                        android:textColor="@color/black_material"
                        android:textSize="@dimen/h4"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".2dp"
                        android:background="@color/bg_gray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:lineSpacingExtra="2.5dp"
                        android:layout_margin="@dimen/dp8"
                        android:maxLines="2"
                        android:padding="@dimen/dp2"
                        android:text="Avilibilty: Every One"
                        android:textColor="@color/black_material"
                        android:textSize="@dimen/h4"
                        android:textStyle="normal" />



                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_margin="@dimen/dp8">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:lineSpacingExtra="2.5dp"
                    android:maxLines="2"
                    android:padding="@dimen/dp4"
                    android:text="*Note \nApartment has SubMeter electricity charges will be \u20B98/unit."
                    android:textColor="@color/black_material"
                    android:textSize="@dimen/h4"
                    android:textStyle="normal" />
            </RelativeLayout>

            <!--<fragment-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="180dp"-->
            <!--android:layout_margin="@dimen/dp16"-->
            <!--android:visibility="gone"-->
            <!--android:name="com.google.android.gms.maps.SupportMapFragment"-->
            <!--android:id="@+id/map_view"/>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/dp64"
        android:layout_height="@dimen/dp64"
        android:layout_centerInParent="true"
        android:visibility="gone" />
    <TextView
        android:id="@+id/tv_btn_contact"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:fontFamily="@font/montserrat_medium"
        android:text="Contact"
        android:textColor="@color/white"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>